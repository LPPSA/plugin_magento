<?xml version="1.0" encoding="UTF-8"?>
<config>

    <modules>
        <PayU_Account>
            <version>2.1.3</version>
            <depends>
                <Mage_Payment/>
            </depends>
        </PayU_Account>
    </modules>

    <global>
        <models>
            <payu_account>
                <class>PayU_Account_Model</class>
            </payu_account>
        </models>
        <helpers>
            <payu_account>
                <class>PayU_Account_Helper</class>
            </payu_account>
        </helpers>
        <blocks>
            <payu_account>
                <class>PayU_Account_Block</class>
            </payu_account>
            <adminhtml>
                <rewrite>
                    <sales_order_view>PayU_Account_Block_Adminhtml_Sales_Order_View</sales_order_view>
                </rewrite>
            </adminhtml>
        </blocks>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <PayU_Account>
                    <files>
                        <default>PayU_Account.csv</default>
                    </files>
                </PayU_Account>
            </modules>
        </translate>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <PayU_Account before="Mage_Adminhtml">PayU_Account_Adminhtml</PayU_Account>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <frontend>
        <routers>
            <payu_account>
                <use>standard</use>
                <args>
                    <module>PayU_Account</module>
                    <frontName>payu_account</frontName>
                </args>
            </payu_account>
        </routers>
        <layout>
            <updates>
                <payu_account module="PayU_Account">
                    <file>payu_account.xml</file>
                </payu_account>
            </updates>
        </layout>
        <translate>
            <modules>
                <PayU_Account>
                    <files>
                        <default>PayU_Account.csv</default>
                    </files>
                </PayU_Account>
            </modules>
        </translate>
    </frontend>
    <default>
        <payment>
            <payu_account>
                <active>1</active>
                <title>PayU</title>
                <model>payu_account/payment</model>
                <order_status></order_status>
                <payment_action>order</payment_action>
                <allowspecific>0</allowspecific>
            </payu_account>
        </payment>
    </default>
</config>
